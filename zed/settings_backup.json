// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "languages": {
    "Rust": {
      "show_edit_predictions": false
    },
    "Gleam": {
      "show_edit_predictions": true
    },
    "Ruby": {
      "show_edit_predictions": false,
      "language_servers": [
        "ruby-lsp",
        "rubocop",
        "tailwindcss-language-server",
        "!solargraph",
        "!sorbet",
        "!steep",
        "..."
      ]
    }
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    },
    "version": "2"
  },
  "telemetry": {
    "metrics": false
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Dark",
    "dark": "One Dark"
  },
  "lsp": {
    "ruby-lsp": {
      "settings": {
        "use_bundler": false
      },
      "initialization_options": {
        "formatter": "standard",
        "linters": ["standard"],
        "enabledFeatures": {
          "diagnostics": false
        }
      },
      "rubocop": {
        "initialization_options": {
          "safeAutocorrect": false
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "ruby": "html",
          "html/erb": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
        }
      }
    }
  }
}
